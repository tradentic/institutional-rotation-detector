{
  "name": "institutional-rotation-detector",
  "version": "1.0.0",
  "private": true,
  "description": "Institutional rotation detection system using 13F filings",
  "scripts": {
    "install:all": "pnpm install",
    "build": "pnpm -r --filter './libs/**' run build && pnpm -r --filter './apps/**' run build",
    "build:libs": "pnpm -r --filter './libs/**' run build",
    "build:worker": "pnpm --filter rotation-detector-temporal-worker run build",
    "build:api": "pnpm --filter rotation-detector-api run build",
    "build:admin": "pnpm --filter rotation-detector-admin run build",
    "start:worker": "node --env-file=apps/temporal-worker/.env.local apps/temporal-worker/dist/worker.js",
    "redis:start": "docker compose -f .devcontainer/docker-compose.yml up redis -d",
    "redis:stop": "docker compose -f .devcontainer/docker-compose.yml stop redis",
    "redis:restart": "pnpm redis:stop && pnpm redis:start",
    "redis:logs": "docker compose -f .devcontainer/docker-compose.yml logs -f redis",
    "redis:cli": "docker exec -it institutional-rotation-detector-redis-1 redis-cli",
    "reset:temporal": "rm -rf .temporal/data",
    "seed:managers": "tsx --env-file=apps/temporal-worker/.env.local tools/seed-fund-managers.ts",
    "seed:index": "tsx --env-file=apps/temporal-worker/.env.local tools/seed-index-calendar.ts",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test",
    "clean": "pnpm -r exec rm -rf dist node_modules .next .turbo"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsx": "^4.19.2"
  },
  "packageManager": "pnpm@10.20.0"
}
